<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFavoriteRestaurants"
             x:Class="MyFavoriteRestaurants.MainPage">

<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="0" Spacing="10">
        <StackLayout VerticalOptions="FillAndExpand">
            <ListView x:Name="ResList" ></ListView>
        </StackLayout>
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Button Clicked="Picked" Text="Pick" WidthRequest="130"></Button>
            <Button Clicked="Options" Text="More Options" WidthRequest="130"></Button>
        </StackLayout>
    </StackLayout>
    
</ContentPage>